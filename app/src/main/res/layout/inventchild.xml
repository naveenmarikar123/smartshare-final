<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_gravity="center"
     />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="150dp"

    >
    <!--android:background="#B8EEFF"     can be included for background   -->


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            >

            <!--<TextView android:id="@+id/itemName"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:textSize="14dp"-->
                <!--android:textColor="#000000"-->
                <!--android:layout_marginTop="2dp"-->
                <!--android:layout_marginBottom="2dp"-->
            <!--/>-->

            <!--<ImageButton-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:id="@+id/visibilityButton"-->
                <!--/>-->

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                />

            <TextView android:id="@+id/involvements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"

            />

            <TextView
                android:id="@+id/ratingByOwner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                />

            <TextView
                android:id="@+id/ratingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
            />

            <ToggleButton
                android:id="@+id/itemStatus"
                android:layout_width="100dp"
                android:layout_height="50dp" />



        </LinearLayout>


        <ImageView android:id="@+id/itemRating"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".4"
        />



    </LinearLayout>



    <TextView android:id="@+id/itemDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="14dp"
        android:textColor="#000000"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_weight=".4"
        />



</LinearLayout>
